  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="index" class="site_title">
                <!--<i class="fa fa-paw"></i> -->
                <img src="siece.png">
                <span>SIECE</span>
              </a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile clearfix">
              <div class="profile_pic">
                <img src="img.png" alt="..." class="img-circle profile_img">
              </div>
              <div class="profile_info">
                <span>Bienvenido,</span>
                <h2>{{#if user.displayName}}{{user.displayName}}{{else}}{{user.email}}{{/if}}</h2>
              </div>
            </div>
            <!-- /menu profile quick info -->
            <br />
            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section">
                <h3>General</h3>
                <ul class="nav side-menu">
                  <li>
                    <a href="index"><i class="fa fa-home"></i> Dashboard</a>
                  </li>
                  <li>
                    <a href="indicadores"><i class="fa fa-bar-chart"></i> Indicadores</a>
                  </li>
                  {{#if user}}
                    {{#unless is_admin}}
                      <li>
                        <a href="perfil"><i class="fa fa-user"></i> Perfil</a>
                      </li>
                      <li>
                        <a href="formularios"><i class="fa fa-edit"></i> Formularios</a>
                      </li>
                    {{/unless}}
                  {{/if}}
                  {{#if is_admin}}
                    <li>
                      <a href="admin"><i class="fa fa-pencil"></i> Administrador</a>
                    </li>
                  {{/if}}
                </ul>
              </div>
            </div>
            <!-- /sidebar menu -->
          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
          <div class="nav_menu">
            <nav>
              <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>
              <div class="navbar-brand">
                <span style="color: #73879C">
                  <strong>Reporte de Datos</strong>
                </span>
              </div>
              <ul class="nav navbar-nav navbar-right">
                <li class="">
                  <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <img src="img.png" alt="">{{#if user.displayName}}{{user.displayName}}{{else}}{{user.email}}{{/if}}
                    <span class=" fa fa-angle-down"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-usermenu pull-right">
                    {{#if is_admin}}
                    {{else}}
                      <li><a href="perfil"> Perfil</a></li>
                    {{/if}}
                    <!--<li><a onclick="firebase.auth().signOut()"><i class="fa fa-sign-out pull-right"></i> Cerrar Sesión</a></li>-->
                    <li><a onclick="logout()"><i class="fa fa-sign-out pull-right"></i> Cerrar Sesión</a></li>
                  </ul>
                </li>
                <li>
                  <a target="_blank" href="https://firebasestorage.googleapis.com/v0/b/siece-app.appspot.com/o/INSTRUCTIVO%20SIECE%20hoja%20V2.pdf?alt=media&token=71fd0ac7-21d4-4f7e-9e58-4832cf332850" >
                    <strong style="color: #1ABB9C">Instructivo <i class="fa fa-book"></i></strong>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                {{#if success}}
                  <div id="message" class="alert alert-success" role="alert">
                    {{success}}
                  </div>
                {{/if}}
                {{#if warning}}
                  <div id="message" class="alert alert-warning" role="alert">
                    {{warning}}
                  </div>
                {{/if}}
                {{#if error}}
                  <div id="message" class="alert alert-danger" role="alert">
                    {{error}}
                  </div>
                {{/if}}
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Crear un Reporte</h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <form id="demo-form2" class="form-label-left" data-parsley-validate method="post">
                      <div class="form-group">
                        <label class="col-xs-12" for="name">
                          Año a Reportar
                        </label>
                        <div class="col-xs-6">
                          <input type="number" id="name" name="reported_year" class="form-control" min="1995"
                                 max="2018" maxlength="4" minlength="4" required>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-xs-12 pt">
                          <button type="submit" class="btn btn-success">Crear Reporte</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Formularios</h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="forms-datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>Año Reportado</th>
                          <th>Estado</th>
                          <th>Fecha de Creación</th>
                          <th>Última Actualización</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each reports}}
                          <tr>
                            <td>{{this.reported_year}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.created_at}}</td>
                            <td>{{this.updated_at}}</td>
                            <td>
                            {{#if this.editable}}
                              <a href="formularios/{{this.reported_year}}"><i class="fa fa-edit"></i></a>
                            {{else}}
                              -
                            {{/if}}
                            </td>
                          </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
          <div class="pull-right">
            Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
    </div>

